<% if (successMsg &&successMsg.length) { %>
  <div class="alert alert-success alert-dismissible fade show col-lg-6 offset-lg-3 col-12 mt-2" role="alert">
      <%= successMsg %>

      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if (errorMsg &&errorMsg.length) { %>
<div class="alert alert-danger alert-dismissible fade show col-lg-6 offset-lg-3 col-12 mt-2 " role="alert">
    <%= errorMsg %>

    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>
