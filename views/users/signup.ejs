<% layout("/layouts/boilerplate") %>

    

<div class="row">
    <h1 class="col-lg-6 offset-lg-3  col-11 offset-1 mt-3">Sign Up on Wanderlust</h1>
    <div class="col-lg-6 offset-lg-3 col-10 offset-1 mt-3">
        
      <form action="/signup" method="POST" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="username" class="form-label">Enter Username</label>
            <input type="text" name="username" id="username"  class="form-control" placeholder="Enter a username" required>
            <div class="valid-feedback">
                Looks good!
              </div>
              <div class="invalid-feedback">
                Please enter a Username.
              </div> 
            </div>

              <div class="mb-3">
                <label for="email" class="form-label">Enter Email</label>
                <input type="email" name="email" id="email"  class="form-control" placeholder="Enter a Email" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please enter a Email.
                  </div>
                </div>

                  <div class="mb-3">
                    <label for="pass" class="form-label">Enter Password</label>
                    <input type="password" name="pass" id="pass"  class="form-control" placeholder="Enter a strong password" required>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                      <div class="invalid-feedback">
                        Please enter a password.
                      </div>
                    </div>
                      <button class="btn btn-outline-success">Sign Up</button>


      </form>

     </div>
</div>
