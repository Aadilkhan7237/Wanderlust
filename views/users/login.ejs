<% layout("/layouts/boilerplate") %>

    

<div class="row">
    <h1 class="col-6 offset-3">Log In on Wanderlust</h1>
    <div class="col-6 offset-3">
        
      <form action="/login" method="POST" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="username" class="form-label">Enter Username</label>
            <input type="text" name="username" id="username"  class="form-control" placeholder="Enter a username" required>
            
            </div>

             

                  <div class="mb-3">
                    <label for="password" class="form-label">Enter Password</label>
                    <input type="password" name="password" id="password"  class="form-control" placeholder="Enter a strong password" required>
                   
                    </div>
                      <button class="btn btn-outline-success">Log In</button>


      </form>

     </div>
</div>
